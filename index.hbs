{{!< default}}

<div class="cover {{#if @blog.cover}}" style="background-image: url({{@blog.cover}}){{else}}no-cover{{/if}}">
    <div class="header">
        <header>
            <h1 class="blog-title">{{@blog.title}}</h1>
        </header>
        <nav>
            <ul>
                <li><a class="fa fa-twitter" href="" target="_blank"></a></li>
                <li><a class="fa fa-facebook" href="" target="_blank"></a></li>
                <li><a class="fa fa-vk" href="" target="_blank"></a></li>
                <li><a class="fa fa-github" href="" target="_blank"></a></li>
                <li><a class="fa fa-linkedin" href="" target="_blank"></a></li>
                <li><a class="fa fa-envelope-o" href="" target="_blank"></a></li>
            </ul>
        </nav>
    </div>
    <div class="container">
        <div class="container-wrapper">
            <div class="blog-description">
                {{@blog.description}}
            </div>
            <div class="blog-stories">
                <div class="blog-stories-wrapper">
                    <h2>Stories</h2>
                    <main id="content" class="content" role="main">
                        {{#foreach posts}}
                            <article class="{{post_class}}">
                                <header class="post-header">
                                    <h2 class="post-title"><a href="{{url}}">{{{title}}}</a></h2>
                                </header>
                                <footer class="post-meta">
                                    {{#if author.image}}<img class="author-thumb" src="{{author.image}}" alt="Author image" nopin="nopin" />{{/if}}
                                    {{author}}
                                    {{tags prefix=" on "}}
                                    <time class="post-date" datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMMM YYYY"}}</time>
                                </footer>
                            </article>
                        {{/foreach}}

                        {{! Previous/next page links - displayed on every page }}
                        {{pagination}}
                    </main>
                </div>
            </div>
        </div>
    </div>
</div>


