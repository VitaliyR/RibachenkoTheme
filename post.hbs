{{!< default}}

{{#post}}

    <div class="post-page">
        <header class="main-header post-head {{#if feature_image}}" style="background-image: url({{img_url feature_image}}){{else}}no-cover{{/if}}">
            {{#if @blog.logo}}
                <div class="blog-logo">
                    <div class="separator"></div>
                    <a href="/">
                        <img class="author-thumb" src="{{@blog.logo}}" alt="Author image" nopin="nopin"/>
                    </a>
                </div>
            {{/if}}
            <h1 class="blog-title">
                <a href="/">
                    {{@blog.title}}
                </a>
            </h1>
        </header>

        <main class="content" role="main">
            <article class="{{post_class}}">

                <header class="post-header">
                    <h1 class="post-title">{{title}}</h1>
                    <section class="post-meta">
                        <time class="post-date"
                              datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMMM YYYY"}}</time> {{tags prefix=" on "}}
                    </section>
                </header>

                <section class="post-content">
                    {{content}}
                </section>

                <footer class="post-footer">

                    <section class="share">
                        <a class="icon icon-twitter icon-black"
                           href="https://twitter.com/share?text={{encode title}}&amp;url={{url absolute="true"}}"
                           onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;">
                            <span class="hidden">Twitter</span>
                        </a>
                        <a class="icon icon-facebook icon-black"
                           href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}"
                           onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;">
                            <span class="hidden">Facebook</span>
                        </a>
                        <a class="icon icon-vk icon-black" href="http://vk.com/share.php?url={{url absolute="true"}}"
                           onclick="window.open(this.href, 'vk-share', 'width=490,height=530');return false;">
                            <span class="hidden">VK</span>
                        </a>
                    </section>

                </footer>

            </article>
        </main>

        <aside class="read-next{{#next_post}} next{{/next_post}}{{#prev_post}} prev{{/prev_post}}">
            {{#prev_post}}
                <a href="{{url}}" class="read-next-story prev {{#if feature_image}}" style="background-image: url({{img_url feature_image}}){{else}}no-cover{{/if}}">
                    <span class="notice">Previous</span>

                    <h2>{{title}}</h2>

                    <p>{{excerpt words="19"}}&hellip;</p>
                    <span class="date">{{date format="DD MMM YY"}}</span>
                </a>
            {{/prev_post}}
            {{#next_post}}
                <a href="{{url}}" class="read-next-story next {{#if feature_image}}" style="background-image: url({{img_url feature_image}}){{else}}no-cover{{/if}}">
                    <span class="notice">Next</span>

                    <h2>{{title}}</h2>

                    <p>{{excerpt words="19"}}&hellip;</p>
                    <span class="date">{{date format="DD MMM YY"}}</span>
                </a>
            {{/next_post}}
        </aside>
    </div>
    {{> footer}}

{{/post}}
